<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="doctor"
            type="com.example.doctors.main.doctors_list.data.Doctor" />

        <variable
            name="viewModel"
            type="com.example.doctors.main.doctors_list.DoctorsListViewModel" />
    </data>


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.github.siyamed.shapeimageview.RoundedImageView
                android:id="@+id/doctor_avatar_img"
                android:layout_height="80dp"
                android:layout_width="80dp"
                loadImage="@{doctor.urlAvatar}"
                app:siRadius="12dp"
                android:scaleType="centerCrop"
                app:layout_constraintCircleRadius="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_margin="8dp" />

            <TextView
                android:id="@+id/name_doctor"
                style="@style/title_blue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="8dp"
                android:text="@{doctor.name}"
                android:textSize="24sp"
                app:layout_constraintStart_toEndOf="@id/doctor_avatar_img"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/avarage_price_textView"
                setPrice="@{doctor.avaragePrice}"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                app:layout_constraintStart_toEndOf="@id/doctor_avatar_img"
                app:layout_constraintTop_toBottomOf="@id/name_doctor" />

            <ImageView
                android:id="@+id/star"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:src="@drawable/ic_star"
                app:layout_constraintBottom_toBottomOf="@+id/rating_textView"
                app:layout_constraintStart_toEndOf="@+id/doctor_avatar_img"
                app:layout_constraintTop_toTopOf="@+id/rating_textView"
                app:layout_constraintVertical_bias="1.0" />

            <TextView
                android:id="@+id/rating_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="1dp"
                android:layout_marginEnd="84dp"
                android:layout_marginBottom="8dp"
                android:text="@{String.valueOf(doctor.rating)}"
                android:textSize="20sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/star"
                app:layout_constraintTop_toBottomOf="@+id/avarage_price_textView" />

            <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
                android:id="@+id/appointment_btn"
                android:layout_width="75dp"
                android:layout_height="35dp"
                android:layout_marginEnd="8dp"
                android:backgroundTint="@color/blue_200"
                android:gravity="center"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:onClick="@{(view) -> viewModel.openAppointmentFragment(doctor.id)}"
                android:text="Запись"
                android:textColor="@color/white"
                android:textSize="10sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</layout>