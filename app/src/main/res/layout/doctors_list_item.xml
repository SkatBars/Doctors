<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="doctor"
            type="com.example.doctors.main.doctorsAppointment.data.Doctor" />
        <variable
            name="viewModel"
            type="com.example.doctors.main.doctorsAppointment.DoctorsListViewModel" />
    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/doctor_avatar_img"
                loadImage="@{doctor.urlAvatar}"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="8dp"
                android:scaleType="centerCrop"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/name_doctor"
                android:text="@{doctor.name}"
                style="@style/title_blue"
                android:textSize="24sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@id/doctor_avatar_img"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="8dp"
                android:layout_marginStart="8dp"/>
            
            <TextView
                android:id="@+id/avarage_price_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                setPrice="@{doctor.avaragePrice}"
                app:layout_constraintTop_toBottomOf="@id/name_doctor"
                app:layout_constraintStart_toEndOf="@id/doctor_avatar_img"
                android:layout_marginStart="8dp"/>

            <ImageView
                android:id="@+id/star"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginStart="8dp"
                android:src="@drawable/ic_star"
                app:layout_constraintBottom_toBottomOf="@+id/rating_textView"
                app:layout_constraintStart_toEndOf="@+id/doctor_avatar_img"
                app:layout_constraintTop_toTopOf="@+id/rating_textView"
                app:layout_constraintVertical_bias="1.0" />

            <TextView
                android:id="@+id/rating_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="1dp"
                android:layout_marginEnd="84dp"
                android:layout_marginBottom="8dp"
                android:text="@{String.valueOf(doctor.rating)}"
                android:textSize="24sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/star"
                app:layout_constraintTop_toBottomOf="@+id/avarage_price_textView" />

            <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
                android:id="@+id/appointment_btn"
                android:layout_width="75dp"
                android:layout_height="35dp"
                android:backgroundTint="@color/blue_200"
                android:gravity="center"
                android:text="Запись"
                android:textColor="@color/white"
                android:textSize="10sp"
                android:paddingEnd="8dp"
                android:paddingStart="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
            android:layout_marginEnd="8dp"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>
</layout>